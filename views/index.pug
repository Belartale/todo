html
  include ./head.pug
  body.background-linear-gradient
    include ./navbar.pug
    main
      section.container.my-5
        ul.list-unstyled.row
          -for (let i = 0; i < arr.length; i++)
            li(class="col-4 mb-5")= arr[i].name
              .card.shadow(style='max-width: 18rem;')
                .card-header
                  .row.align-items-center
                    .col-6
                      h5.card-title= arr[i].title
                    .col-6.d-flex.justify-content-end
                    
                      button.btn.btn-outline-success.me-3(type='button' data-bs-toggle='modal' data-bs-target=`#modal${arr[i]._id}`)
                        svg.bi.bi-elementow-clockwise(xmlns='http://www.w3.org/2000/svg' width='20' height='20' fill='currentColor' viewbox='0 0 16 16')
                          path(fill-rule='evenodd' d='M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z')
                          path(d='M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z')
                      .modal.fade(id=`modal${arr[i]._id}` tabindex='-1' aria-labelledby=`modalLabel${arr[i]._id}` aria-hidden='true')
                        .modal-dialog
                          form(action="/changeTodo", method="post").modal-content
                            .modal-header
                              h5(id=`modalLabel${arr[i]._id}`).modal-title.text-success Window changes
                              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                            .modal-body

                              input(type="text", name="id", value=arr[i]._id, hidden)
                              input(type="text", name="title", value=arr[i].title, hidden)
                              input(type="text", name="text", value=arr[i].text, hidden)

                              label(class="form-label" for="changeTitle") changeTitle
                              input(class="form-control" id="changeTitle" type="text", name="changeTitle", value=arr[i].title).d-block.mb-4
                              
                              label(class="form-label" for="changeText") changeText
                              input(class="form-control" id="changeText" type="text", name="changeText", value=arr[i].text).d-block
                            .modal-footer
                              button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
                              button.btn.btn-success(type='submit') Save changes

                      form(action="/deleteTodo", method="post" style="margin-bottom: 0px;" )
                        input(type="text", name="id", value=arr[i]._id, hidden).position-absolute
                        input(type="text", name="title", value=arr[i].title, hidden).position-absolute
                        input(type="text", name="text", value=arr[i].text, hidden).position-absolute
                        button(class="btn btn-outline-danger" type="submit")
                          svg.bi.bi-file-earmark-minus(xmlns='http://www.w3.org/2000/svg' width='20' height='20' fill='currentColor' viewbox='0 0 16 16')
                            path(d='M5.5 9a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5z')
                            path(d='M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z')


                - if (arr[i].text != "empty")
                  .card-body
                      p.card-text= arr[i].text
              
  include ./endBody.pug