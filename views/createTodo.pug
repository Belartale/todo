html
  include ./head.pug
  body.background-linear-gradient
    include ./navbar.pug
    main.container.my-5
      section
        h1.text-center.mb-5 CREATE YOUR TODO:

        div.d-flex.justify-content-center

          form(action="/createTodo", method="post").card.col-4.aniTest

            .card-header 
              label(for="inputTitle").card-title.d-flex.justify-content-center.fs-3 Title:
              input(class="form-control", id="inputTitle", type="text", name="titleTodo", placeholder="Your title of todo ..." required).card-text
              
            .card-body
              label(for="inputText").card-title.d-flex.justify-content-center.fs-5 Text:
              textarea(class="form-control" id="inputText" type="text" name="textTodo" placeholder="Your text of todo ...")

            .card-body
              
              div.d-flex.justify-content-between.mb-4
                input.form-control.form-control-color.me-5(type='color' name="colorTodo" value='#ffffff' title='Choose your color of todo')
                input(type="datetime-local" name="timeToTodo" placeholder="Your time of todo" title="Your time to complete todo").form-control 

              .d-flex.justify-content-center
                button(class="btn btn-outline-warning rounded-circle p-2" type="submit")
                  svg.bi.bi-plus-lg(xmlns='http://www.w3.org/2000/svg' width='20' height='20' fill='currentColor' viewBox='0 0 16 16')
                    path(d='M8 0a1 1 0 0 1 1 1v6h6a1 1 0 1 1 0 2H9v6a1 1 0 1 1-2 0V9H1a1 1 0 0 1 0-2h6V1a1 1 0 0 1 1-1z')


    include ./endBody.pug