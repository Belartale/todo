html
  include ./head.pug
  body.background-linear-gradient
    include ./navbar.pug
    main.container.my-5
      section.d-flex.justify-content-center
        form(action="/signUpUser", method="post").card.col-4
          .card-header
            h1.text-center SIGN UP
          .card-body
            
              .mb-3
                label.form-label(for='labelUserName') Your username
                input#labelUserName.form-control(type='text' name="userName" value="user1")
              .mb-3
                label.form-label(for='labelUserPassword') Password
                input#labelUserPassword.form-control(type='password' name="userPassword" value="1")
          .card-footer
            button.btn.btn-primary(type='submit') Submit
      #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header
              h5#exampleModalLabel.modal-title Modal title
              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
              | ...
            .modal-footer
              button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
              button.btn.btn-primary(type='button') Save changes





    include ./endBody.pug